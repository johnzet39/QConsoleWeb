<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width initial-scale=1, shrink-to-fit=no" />
    <title>QConsole @ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="~/images/icons/icon.ico">

    <link href="~/css/dashboard.css" rel="stylesheet">

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.js"
            asp-fallback-href="~/lib/bootstrap/js/bootstrap.min.js"/>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"
            asp-fallback-src="~/lib/jquery/jquery.min.js" type="text/javascript"></script>
    <link href="~/css/Style.css" rel="stylesheet" type="text/css" />

    <link href="~/images/awesome/css/fontawesome.min.css" rel="stylesheet">
    @*<link href="~/images/awesome/css/brands.min.css" rel="stylesheet">*@
    <link href="~/images/awesome/css/solid.min.css" rel="stylesheet">

</head>


@RenderSection("scripts", false)

<body>
    @await Component.InvokeAsync("NavigationMenu")

    <div class="container-fluid">
        <div class="row">
            
            @await  Component.InvokeAsync("LeftNavigationMenu")

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success">@TempData["message"]</div>
                }
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-warning">@TempData["error"]</div>
                }
                @RenderBody()
            </main>
        </div>
    </div>

</body>
</html>
<footer class="card-footer text-muted col-md-9 ml-sm-auto col-lg-10 px-4" style="margin-top: 10px"><h6>johnzet (c) 2019</h6></footer>
