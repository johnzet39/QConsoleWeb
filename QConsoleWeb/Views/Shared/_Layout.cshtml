<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>QConsole @ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="~/images/icons/icon.ico">
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @@media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }

    </style>


    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.min.js" type="text/javascript"></script>
    <link href="~/css/Style.css" rel="stylesheet" type="text/css" />

    @*<link asp-href-include="~/images/awesome/css/*.min.css" rel="stylesheet">*@
    <link href="~/images/awesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="~/images/awesome/css/brands.min.css" rel="stylesheet">
    <link href="~/images/awesome/css/solid.min.css" rel="stylesheet">

    @*<script src="~/js/DeleteConfirmModal.js"></script>*@

</head>
<body>
    @await Component.InvokeAsync("NavigationMenu")

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActiveController("Session")" asp-controller="Session" asp-action="List">
                                <i class="fas fa-list-ul"></i>
                                Сессии
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActiveController("User")" asp-controller="User" asp-action="List">
                                <i class="fas fa-user"></i>
                                Пользователи
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActiveController("Layer")" asp-controller="Layer" asp-action="List">
                                <i class="fas fa-layer-group"></i>
                                Слои
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActiveController("Grant")" asp-controller="Grant" asp-action="List">
                                <i class="fas fa-unlock"></i>
                                Привилегии
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActiveController("List")" asp-controller="Stat" asp-action="List">
                                <i class="fas fa-chart-line"></i>
                                Статистика
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActiveController("LogRow")" asp-controller="LogRow" asp-action="">
                                <i class="fas fa-list-alt"></i>
                                Логгер
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success">@TempData["message"]</div>
                }
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-warning">@TempData["error"]</div>
                }
                @RenderBody()
            </main>
        </div>
    </div>
    
</body>
</html>
