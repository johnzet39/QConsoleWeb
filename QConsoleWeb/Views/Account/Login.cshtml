@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>


    <meta name="viewport" content="width=device-width initial-scale=1, shrink-to-fit=no" />
    <title>QConsole. Авторизация</title>
    <link rel="icon" type="image/x-icon" href="~/images/icons/icon.ico">


    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <link href="~/images/awesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="~/images/awesome/css/solid.min.css" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
        }

        body {
            background-color: rgb(0, 0, 21);
            background-image: repeating-linear-gradient(45deg, #00243eb0, #001c2fc7 2px, transparent 0, transparent 9px), repeating-linear-gradient(-45deg, #162129cf, #001f35 2px, transparent 0, transparent 9px);
        }
    </style>

</head>

<body>
    <style>
        .footer-login{
            position:absolute;
            right: 5px;
            bottom: 5px;
            color:#6d6d6d;
            font-size: 0.7em;
        }
    </style>

    <div class="h-100 row align-items-center m-0">
        <div class="col-md-4 col-1"></div>
        <div class="col-md-4 p-4 col bg-light border rounded">
            <div class=" m-1 p-1 text-center">
                <img src="~/images/icons/icon_40.png" />
                <h5>Авторизация</h5>
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form asp-action="Login" name="loginForm" method="post">
                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

                <div class="form-group">
                    @*<label asp-for="Username"></label>*@
                    <input asp-for="Username" id="lgn" class="form-control" placeholder="Логин" />
                    <div><span asp-validation-for="Username" class="text-danger"></span></div>
                </div>

                <div class="form-group">
                    @*<label asp-for="Password"></label>*@
                    <input asp-for="Password" id="pwd" class="form-control" placeholder="Пароль" />
                    <div><span asp-validation-for="Password" class="text-danger"></span></div>
                </div>
                <div class="text-center">
                    <button class="btn btn-dark" id="submitBtn" type="submit">Войти</button>
                </div>
            </form>
        </div>
        <div class="col-md-4 col-1"></div>
    </div>
    <div class="d-inline footer-login">
        2019 © Zlatanov E.
    </div>
</body>
</html>

<script>
    function saveUsername(e) {
        var loginTxt = document.loginForm.Username;
        localStorage.setItem("login", loginTxt.value);
    }

    function loadUsername() {
        var loginTxt = document.loginForm.Username;
        var loc = localStorage.getItem("login");
        loginTxt.value = loc;
        if (loc!= null && loc.length > 0)
            document.getElementById("pwd").focus();
        else 
            document.getElementById("lgn").focus();
    }

    loadUsername();

    var btn = document.getElementById("submitBtn");
    btn.addEventListener("click", saveUsername);
</script>