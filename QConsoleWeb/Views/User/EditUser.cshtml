@model  User

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-action="EditUser" method="post" asp-route-isnew=@ViewBag.isnew>
        <input type="hidden" asp-for="Usesysid" />
        <div class="form-group">
            <label asp-for="Usename"></label>
            <div><span asp-validation-for="Usename" class="text-danger"></span></div>
            <input asp-for="Usename" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Descript"></label>
            <div><span asp-validation-for="Descript" class="text-danger"></span></div>
            <input asp-for="Descript" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Isrole"></label>
            <div><span asp-validation-for="Isrole" class="text-danger"></span></div>
            <input type="checkbox" asp-for="Isrole" class="form-check" id="role_checkbox"/>
        </div>

        <div class="form-group" id="pass_group">
            <div class="form-group">
                <label asp-for="Password"></label>
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
                <input asp-for="Password" class="form-control" placeholder="Новый пароль"  id="pass" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Повторите пароль" id="conf_pass"/>
            </div>
        </div>

        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="List" class="btn btn-secondary">Cancel</a>
        </div>
    </form>



    <script type="text/javascript">
        $(document).ready(function () {

            $('#role_checkbox').before(function () {
                if (!this.checked) {
                    $('#pass_group').show();
                }
                else {
                    $('#pass_group').hide();
                }
            });

            $('#role_checkbox').change(function () {
                if (!this.checked) {
                    $('#pass_group').show();
                }
                else {
                    $('#pass_group').hide();
                    document.getElementById('pass').value = '';
                    document.getElementById('conf_pass').value = '';
                }
            });
        });
    </script>