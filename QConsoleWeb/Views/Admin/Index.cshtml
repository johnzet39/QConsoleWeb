@model IEnumerable<AppUser>

<div class="card-header bg-primary  text-white"><h4>Аккаунты консоли</h4></div>

<div class="card-body px-0">
    <table class="table table-sm table-bordered">
        <tr><th>ID</th><th>Name</th><th></th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="2" class="text-center">No User Accounts</td></tr>
        }
        else
        {
            foreach (AppUser user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>
                        <form class="text-center" asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit"
                               asp-route-id="@user.Id">Edit</a>
                            <button type="submit" onclick="return confirm('Подтвердите удаление');"
                                    class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
</div>

<div class="card-footer p-2 text-left">
    <a class="btn btn-primary" asp-action="Create">Создать</a>
</div>